{{>adminTop}}



<section>

  <div class="container ">

    {{!-- <div class="row mt-5"> --}}
      {{!-- <a href="/admin/add-User" class="btn btn-success  ">Add User</a> --}}

      {{!-- <a href="/admin/logout" class="btn btn-danger ml-auto ">LOGOUT</a> --}}
      {{!-- </div> --}}
    <table class="table table-striped mt-5 ">
      <thead>
        <tr>
          <th scope="col">User ID</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          {{!-- <th scope="col">Password</th> --}}
          {{!-- <th scope="col">admin</th> --}}
          <th scope="col">Blocked-status</th>
          {{!-- <th>Image</th> --}}
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <th scope="row">{{this._id}}</th>
          <td>{{this.Name}}</td>
          <td>{{this.Email}}</td>
          {{!-- <td>{{this.Password}}</td> --}}
          {{!-- <td>{{this.Admin}} </td> --}}
          <td>{{this.Blocked}} </td>

          <td><button class="btn btn-primary btn-sm btn-block"
              onclick="window.location.href='/admin/adminedituser?userId={{this._id}}'">edit</button>
            <button class="btn btn-danger btn-sm btn-block"
              onclick="window.location.href='/admin/admindeleteuser?userId={{this._id}}'">delete</button>

            {{#if this.Blocked}}
            <button class="btn btn-success btn-sm btn-block"
              onclick="window.location.href='/admin/adminUn_block_user?userId={{this._id}}'">Un_block</button>
          </td>
          {{else}}
          <button class="btn btn-warning btn-sm btn-block"
            onclick="window.location.href='/admin/adminblock_user?userId={{this._id}}'">block</button>
          {{/if}}
        </tr>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
  
</section>

{{>adminBottom}}