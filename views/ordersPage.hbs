  </div>
  <a href="/invoice?id={{this._id}}"><button class="btn btn-success">Invoice Download</button></a>
 

  <hr>
{{#each this.products}}
  <div class="card-container">
    <div class="card">
      <div class="img">
        <img src="/product-images/{{this.product._id}}.jpg"  alt="Nike Air Jordan 1">
      </div>
      <div class="parent">
        <div class="content">
          <div class="details-1">
            <h1>{{this.product.Name}}</h1>
            <p>{{this.product.Category}}</p>
          </div>
          <div class="details-2">
            {{!-- <p>Size: 10</p> --}}
            <p>Qty: {{this.quantity}}</p>
            {{!-- <p><b>₹{{this.product.Price}}</b></p> --}}
          </div>
        </div>
        <div class="status">
          <div class="sec1">
            <p>Price</p>
            <h2>₹{{this.product.Price}}</h2>
          </div>
          <div class="sec2">
            <p>Delivery address:</p>
            <h3>{{../this.deliveryDetails.address1}}</h3>
          </div>
          {{!-- <div class="sec2">
            <p>payment method:</p>
            <h3>{{../this.paymentMethod}}</h3>
          </div> --}}
        </div>
      </div>
    </div>
    <hr>
  </div>
  
  {{/each}}
