  <div class="card-bottom">
    {{#if (equal this.status "placed")}} 
    <a href="/cancelOrder?id={{this._id}}"><button  class="btn btn-danger">✖ CANCEL ORDER</button></a>
     {{/if}}
      {{#if (equal this.status "pending")}} 
    <a href="/cancelOrder?id={{this._id}}"><button  class="btn btn-danger">✖ CANCEL ORDER</button></a>
     {{/if}}
        {{#if (equal this.status "shipped")}} 
    <a href="/cancelOrder?id={{this._id}}"><button class="btn btn-danger">✖ CANCEL ORDER</button></a>
     {{/if}}
     {{#if (equal this.status "delivered")}}
